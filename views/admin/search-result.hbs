<section>
    <div class="container mt-5">
        <div class="table-responsive-md mt-2">
            <table class="table responsive">
                {{#if response}}
                <thead class="table-dark">
                    <tr>
                        <th scope="col">No.</th>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Description</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each response}}
                    <tr class="align-middle">
                        <th scope="row">{{incremented @index}}</th>
                        <td><img src="/images/product-images/{{this._id}}.png" alt="" style="width: 3rem"></td>
                        <td>{{this.Name}}</td>
                        <td>{{this.Price}}</td>
                        <td>{{this.Description}}</td>
                        <td><button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to Cart</button>
                        </td>
                    </tr>
                    {{/each}}
                    {{else}}
                    <tr class="align-middle">
                        <td>
                            <div class="container mt-5">
                                <div class="alert alert-secondary" role="alert">
                                    <h4 class="alert-heading">Not Found!</h4>
                                    <hr>
                                    <p class="mb-0">Make sure You need to search the products which is in this shopping cart</p>
                                </div>
                            </div>
                        </td>
                    </tr>
                    {{/if}}
                </tbody>
            </table>
        </div>
    </div>
</section>