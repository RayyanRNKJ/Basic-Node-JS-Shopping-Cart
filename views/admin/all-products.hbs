<section>
    <div class="container mt-5">
        <div class="row">
            <div class="col-2">
                <a href="/admin/add-product" class="btn btn-success mb-2">Add a Product</a>
                <a href="/admin/delete-all-products" onclick="return confirm('Are You Sure to Delete All Products ?')"
                    class="btn btn-danger">Delete All Products</a>
            </div>
            <div class="table-responsive-md mt-2">
                <table class="table responsive">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">No.</th>
                            <th scope="col">Name</th>
                            <th scope="col">Price</th>
                            <th scope="col">Description</th>
                            <th scope="col">Image</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each products}}
                        <tr class="align-middle">
                            <th scope="row">{{incremented @index}}</th>
                            <td>{{this.Name}}</td>
                            <td>{{this.Price}}</td>
                            <td>{{this.Description}}</td>
                            <td><img src="/images/product-images/{{this._id}}.png" alt="" style="width: 3rem"></td>
                            <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a></td>
                            <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                                    onclick="return confirm('Are You Sure to Delete {{this.Name}} ?')">Delete</a></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>