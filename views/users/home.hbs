<section>
    <div class="container mt-2">
        <div class="row mt-5">
            {{#each products}}
            <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-5">
                <div class="card mx-auto" style="width: 16rem;">
                    <img src="/images/product-images/{{this._id}}.png" class="card-img-top" alt="phone-image"
                        style="height: 17rem;">
                    <hr class="text-secondary">
                    <div class="card-body pb-1">
                        <div class="" style="display: flex; justify-content: end;">
                            <div class="" style="margin-right: auto;">
                                <h5 class="card-title">{{this.Name}}</h5>
                            </div>
                            <div class="">
                                <p class="card-text"><small>â‚¹{{this.Price}}</small></p>
                            </div>
                        </div>
                        <p class="card-text">{{this.Description}}</p>
                        <div class="row">
                            <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to Cart</button>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

<script>
    function addToCart(productId) {
        $.ajax({
            url: "/add-to-cart/" + productId,
            method: "get",
            success: (response) => {
                if (response.status) {
                    let count = $("#cart-count").html();
                    count = parseInt(count) + 1;
                    $("#cart-count").html(count);
                }
            },
        });
    }
</script>