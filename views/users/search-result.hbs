<section>
    <div class="container mt-5">
        <div class="table-responsive-md mt-2">
            <table class="table responsive">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">No.</th>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Description</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each response}}
                    <tr class="align-middle">
                        <th scope="row">{{incremented @index}}</th>
                        <td><img src="/images/product-images/{{this._id}}.png" alt="" style="width: 3rem"></td>
                        <td>{{this.Name}}</td>
                        <td>{{this.Price}}</td>
                        <td>{{this.Description}}</td>
                        <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a></td>
                        <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                                onclick="return confirm('Are You Sure to Delete {{this.Name}} ?')">Delete</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>

<script>
    function addToCart(productId) {
        $.ajax({
            url: "/add-to-cart/" + productId,
            method: "get",
            success: (response) => {
                if (response.status) {
                    let count = $("#cart-count").html();
                    count = parseInt(count) + 1;
                    $("#cart-count").html(count);
                }
            },
        });
    }
</script>